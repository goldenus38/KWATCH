{
  "name": "kwatch",
  "version": "1.0.0",
  "private": true,
  "description": "KWATCH - 웹사이트 관제 시스템",
  "workspaces": [
    "packages/server",
    "packages/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:server": "npm run dev -w packages/server",
    "dev:web": "npm run dev -w packages/web",
    "build": "npm run build --workspaces --if-present",
    "build:server": "npm run build -w packages/server",
    "build:web": "npm run build -w packages/web",
    "lint": "npm run lint --workspaces --if-present",
    "db:generate": "npm run db:generate -w packages/server",
    "db:migrate": "npm run db:migrate -w packages/server",
    "db:push": "npm run db:push -w packages/server",
    "db:studio": "npm run db:studio -w packages/server"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
